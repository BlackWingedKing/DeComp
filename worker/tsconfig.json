{
  "include": ["./src"],
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "target": "ES2020",
    "strict": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  }
}
